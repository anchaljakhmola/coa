
{% extends 'layout.html.twig' %}

{% block content %}

<!-- list of departments -->

<div class="department-card mdl-grid">
  <div class="mdl-cell mdl-cell--10-col-desktop mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--1-offset-desktop">
    <div class="mdl-grid">
  {% for item in deptts %}

    <div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--2-col-phone mdl-cell--4-col-tablet">
      <div class="demo-card-square mdl-card  mdl-shadow--2dp">
        <div class="mdl-card__title mdl-card--expand">

        </div>
        <div class="mdl-card__supporting-text">
          <span>Deparment of <strong>{{item|upper}}</strong></span>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/department/{{item}}">
            Visit Department <i class="fa fa-send gray-icon"></i>
          </a>
        </div>
      </div>
    </div>

  {% endfor %}
  </div>
  </div>
</div>

{% endblock %}
